<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.episode.EpisodeFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_episode_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:listitem="@layout/cardview_episode"/>


    <fragment
        android:id="@+id/frag_episode_pagination"
        android:name="org.jbtc.aniapp.component.PaginationFragment"
        class="org.jbtc.aniapp.component.PaginationFragment"
        tools:layout="@layout/fragment_pagination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>