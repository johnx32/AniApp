<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_pagination_root"
    tools:context="component.PaginationFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:isScrollContainer="true">
        <LinearLayout
            android:id="@+id/ll_pagination_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pagination_bt01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_pagination_bt02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="2"/>
            <TextView
                android:id="@+id/tv_pagination_bt03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_pagination_bt04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_pagination_bt05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_pagination_bt06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_pagination_bt07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_pagination_bt08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_pagination_bt09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/btn_pagination"
                android:text="1"/>
        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>